<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:backgroundTint="#04C3DC"
    tools:context=".User.InfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="391dp"
        android:layout_height="212dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:text="Welcome to lorans mubariky watchshop, where luxury meets timelessness. Explore our exquisite collection of meticulously crafted timepieces, curated to reflect sophistication and elegance. From iconic classics to exclusive limited editions, each watch embodies precision engineering and exquisite design. Discover a world of refined taste and unparalleled craftsmanship with lorans mubariky watchshop. Elevate your style with the perfect statement piece from our exclusive range of luxury watches."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="170dp"
        android:text="INFORMATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="97dp"
        android:layout_marginTop="41dp"
        android:src="@drawable/pablo"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="126dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/paolo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="238dp"
        android:layout_height="88dp"
        android:layout_marginTop="34dp"
        android:fontFamily="sans-serif-black"
        android:text="this is pablo, he is working in my factory for more than 20 years his job is to make sure that all of diamonds we get are real"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="190dp"
        android:layout_height="92dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="26dp"
        android:text="this is paolo, he make sure to clean the diamonds well before we start using them on watches"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>